@page
@model CatCam.Web.Pages.WebcamModel
@{
    ViewData["Title"] = "Webcam Stream";
}
@section Head { }

@* Scripts are loaded globally via _Layout *@
    <header class="header">
        <div class="header-left">
            <div class="logo">
                <fluent-icon icon="video-camera" size="32"></fluent-icon>
                <span>CatCam</span>
            </div>
        </div>
        <div class="user-info">
            <fluent-icon icon="person"></fluent-icon>
            <span>@User.Identity?.Name</span>
            <fluent-button appearance="lightweight" class="logout-button" onclick="window.location.href='/Logout'">
                <fluent-icon slot="start" icon="sign-out"></fluent-icon>
                Logout
            </fluent-button>
        </div>
    </header>

    <main class="main-content">
        <div class="status-bar">
            <div class="status-item">
                <div class="status-indicator"></div>
                <fluent-icon icon="eye"></fluent-icon>
                <strong>Live Stream Active</strong>
            </div>
            <div class="status-item">
                <fluent-icon icon="camera"></fluent-icon>
                <span>Raspberry Pi Camera</span>
            </div>
            <div class="status-item">
                <fluent-icon icon="clock"></fluent-icon>
                <span id="current-time"></span>
            </div>
        </div>

        <div class="video-container">
            <div class="video-header">
                <div class="video-title">
                    <fluent-icon icon="video"></fluent-icon>
                    Live Camera Feed
                </div>
                <div class="video-controls">
                    <fluent-button appearance="stealth" id="fullscreen-btn" title="Fullscreen">
                        <fluent-icon icon="full-screen-maximize"></fluent-icon>
                    </fluent-button>
                    <fluent-button appearance="stealth" id="refresh-btn" title="Refresh">
                        <fluent-icon icon="arrow-clockwise"></fluent-icon>
                    </fluent-button>
                </div>
            </div>
            <div class="video-wrapper" id="video-wrapper">
                <div class="video-placeholder">
                    <fluent-icon icon="video-off"></fluent-icon>
                    <p><strong>Camera stream will appear here</strong></p>
                    <p style="margin-top: 8px;">Connect your Raspberry Pi camera to start streaming</p>
                    <p style="margin-top: 16px; font-size: 12px;">Stream URL: /api/camera/stream</p>
                </div>
                <!-- 
                    To enable actual streaming, replace the placeholder with:
                    <img id="camera-stream" src="/api/camera/stream" alt="Camera Stream" />
                    or use an appropriate video streaming element based on your camera setup
                -->
            </div>
        </div>

        <div class="info-cards">
            <div class="info-card">
                <div class="info-card-header">
                    <fluent-icon icon="camera"></fluent-icon>
                    <div class="info-card-title">Camera Setup</div>
                </div>
                <div class="info-card-content">
                    Configure your Raspberry Pi camera module. The stream endpoint is <code>/api/camera/stream</code> which should be implemented to serve the camera feed.
                </div>
            </div>
            <div class="info-card">
                <div class="info-card-header">
                    <fluent-icon icon="settings"></fluent-icon>
                    <div class="info-card-title">Stream Settings</div>
                </div>
                <div class="info-card-content">
                    Adjust camera settings, resolution, and frame rate through your Raspberry Pi camera configuration. Common formats: MJPEG, H.264.
                </div>
            </div>
            <div class="info-card">
                <div class="info-card-header">
                    <fluent-icon icon="shield-checkmark"></fluent-icon>
                    <div class="info-card-title">Secure Access</div>
                </div>
                <div class="info-card-content">
                    This stream is protected by authentication. Configure your password in <code>appsettings.json</code> under Authentication:Password.
                </div>
            </div>
        </div>
    </main>

    <script>
        // Update current time
        function updateTime() {
            const now = new Date();
            const timeString = now.toLocaleTimeString('en-US', { 
                hour: '2-digit', 
                minute: '2-digit', 
                second: '2-digit' 
            });
            document.getElementById('current-time').textContent = timeString;
        }
        
        updateTime();
        setInterval(updateTime, 1000);

        // Fullscreen functionality
        document.getElementById('fullscreen-btn').addEventListener('click', () => {
            const wrapper = document.getElementById('video-wrapper');
            if (wrapper.requestFullscreen) {
                wrapper.requestFullscreen();
            } else if (wrapper.webkitRequestFullscreen) {
                wrapper.webkitRequestFullscreen();
            } else if (wrapper.msRequestFullscreen) {
                wrapper.msRequestFullscreen();
            }
        });

        // Refresh functionality
        document.getElementById('refresh-btn').addEventListener('click', () => {
            // If you have an actual image stream, refresh it
            const stream = document.getElementById('camera-stream');
            if (stream) {
                stream.src = stream.src.split('?')[0] + '?t=' + new Date().getTime();
            } else {
                location.reload();
            }
        });
    </script>
