@page
@model CatCam.Web.Pages.WebcamModel
@{
    ViewData["Title"] = "Webcam Stream";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CatCam</title>
    <script type="module" src="https://cdn.jsdelivr.net/npm/@@fluentui/web-components/dist/web-components.min.js"></script>
    <style>
        :root {
            --background-color: #fafafa;
            --card-background: #ffffff;
            --header-height: 60px;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: var(--background-color);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 0 24px;
            height: var(--header-height);
            display: flex;
            align-items: center;
            justify-content: space-between;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }

        .header-left {
            display: flex;
            align-items: center;
            gap: 16px;
        }

        .logo {
            display: flex;
            align-items: center;
            gap: 12px;
            font-size: 24px;
            font-weight: 600;
        }

        .user-info {
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .logout-button {
            --neutral-fill-rest: rgba(255, 255, 255, 0.1);
            --neutral-fill-hover: rgba(255, 255, 255, 0.2);
        }

        .main-content {
            flex: 1;
            padding: 24px;
            display: flex;
            flex-direction: column;
            gap: 24px;
        }

        .status-bar {
            background: var(--card-background);
            border-radius: 8px;
            padding: 16px 24px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
            display: flex;
            align-items: center;
            justify-content: space-between;
            flex-wrap: wrap;
            gap: 16px;
        }

        .status-item {
            display: flex;
            align-items: center;
            gap: 8px;
            color: #333;
        }

        .status-indicator {
            width: 8px;
            height: 8px;
            border-radius: 50%;
            background-color: #10b981;
            animation: pulse 2s infinite;
        }

        @@keyframes pulse {
            0%, 100% {
                opacity: 1;
            }
            50% {
                opacity: 0.5;
            }
        }

        .video-container {
            background: var(--card-background);
            border-radius: 12px;
            padding: 24px;
            box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
            flex: 1;
            display: flex;
            flex-direction: column;
        }

        .video-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 16px;
            padding-bottom: 16px;
            border-bottom: 1px solid #e5e7eb;
        }

        .video-title {
            font-size: 20px;
            font-weight: 600;
            color: #333;
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .video-controls {
            display: flex;
            gap: 8px;
        }

        .video-wrapper {
            flex: 1;
            background: #000;
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 400px;
            position: relative;
            overflow: hidden;
        }

        .video-placeholder {
            text-align: center;
            color: #999;
            padding: 40px;
        }

        .video-placeholder fluent-icon {
            font-size: 64px;
            margin-bottom: 16px;
        }

        video, img {
            max-width: 100%;
            max-height: 100%;
            border-radius: 8px;
        }

        .info-cards {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 16px;
        }

        .info-card {
            background: var(--card-background);
            border-radius: 8px;
            padding: 20px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
        }

        .info-card-header {
            display: flex;
            align-items: center;
            gap: 12px;
            margin-bottom: 12px;
            color: #667eea;
        }

        .info-card-title {
            font-weight: 600;
            font-size: 16px;
        }

        .info-card-content {
            color: #666;
            font-size: 14px;
            line-height: 1.5;
        }

        @@media (max-width: 768px) {
            .header {
                padding: 0 16px;
            }

            .main-content {
                padding: 16px;
            }

            .status-bar {
                flex-direction: column;
                align-items: flex-start;
            }

            .video-container {
                padding: 16px;
            }
        }
    </style>
</head>
<body>
    <header class="header">
        <div class="header-left">
            <div class="logo">
                <fluent-icon icon="video-camera" size="32"></fluent-icon>
                <span>CatCam</span>
            </div>
        </div>
        <div class="user-info">
            <fluent-icon icon="person"></fluent-icon>
            <span>@User.Identity?.Name</span>
            <fluent-button appearance="lightweight" class="logout-button" onclick="window.location.href='/Logout'">
                <fluent-icon slot="start" icon="sign-out"></fluent-icon>
                Logout
            </fluent-button>
        </div>
    </header>

    <main class="main-content">
        <div class="status-bar">
            <div class="status-item">
                <div class="status-indicator"></div>
                <fluent-icon icon="eye"></fluent-icon>
                <strong>Live Stream Active</strong>
            </div>
            <div class="status-item">
                <fluent-icon icon="camera"></fluent-icon>
                <span>Raspberry Pi Camera</span>
            </div>
            <div class="status-item">
                <fluent-icon icon="clock"></fluent-icon>
                <span id="current-time"></span>
            </div>
        </div>

        <div class="video-container">
            <div class="video-header">
                <div class="video-title">
                    <fluent-icon icon="video"></fluent-icon>
                    Live Camera Feed
                </div>
                <div class="video-controls">
                    <fluent-button appearance="stealth" id="fullscreen-btn" title="Fullscreen">
                        <fluent-icon icon="full-screen-maximize"></fluent-icon>
                    </fluent-button>
                    <fluent-button appearance="stealth" id="refresh-btn" title="Refresh">
                        <fluent-icon icon="arrow-clockwise"></fluent-icon>
                    </fluent-button>
                </div>
            </div>
            <div class="video-wrapper" id="video-wrapper">
                <div class="video-placeholder">
                    <fluent-icon icon="video-off"></fluent-icon>
                    <p><strong>Camera stream will appear here</strong></p>
                    <p style="margin-top: 8px;">Connect your Raspberry Pi camera to start streaming</p>
                    <p style="margin-top: 16px; font-size: 12px;">Stream URL: /api/camera/stream</p>
                </div>
                <!-- 
                    To enable actual streaming, replace the placeholder with:
                    <img id="camera-stream" src="/api/camera/stream" alt="Camera Stream" />
                    or use an appropriate video streaming element based on your camera setup
                -->
            </div>
        </div>

        <div class="info-cards">
            <div class="info-card">
                <div class="info-card-header">
                    <fluent-icon icon="camera"></fluent-icon>
                    <div class="info-card-title">Camera Setup</div>
                </div>
                <div class="info-card-content">
                    Configure your Raspberry Pi camera module. The stream endpoint is <code>/api/camera/stream</code> which should be implemented to serve the camera feed.
                </div>
            </div>
            <div class="info-card">
                <div class="info-card-header">
                    <fluent-icon icon="settings"></fluent-icon>
                    <div class="info-card-title">Stream Settings</div>
                </div>
                <div class="info-card-content">
                    Adjust camera settings, resolution, and frame rate through your Raspberry Pi camera configuration. Common formats: MJPEG, H.264.
                </div>
            </div>
            <div class="info-card">
                <div class="info-card-header">
                    <fluent-icon icon="shield-checkmark"></fluent-icon>
                    <div class="info-card-title">Secure Access</div>
                </div>
                <div class="info-card-content">
                    This stream is protected by authentication. Configure your password in <code>appsettings.json</code> under Authentication:Password.
                </div>
            </div>
        </div>
    </main>

    <script>
        // Update current time
        function updateTime() {
            const now = new Date();
            const timeString = now.toLocaleTimeString('en-US', { 
                hour: '2-digit', 
                minute: '2-digit', 
                second: '2-digit' 
            });
            document.getElementById('current-time').textContent = timeString;
        }
        
        updateTime();
        setInterval(updateTime, 1000);

        // Fullscreen functionality
        document.getElementById('fullscreen-btn').addEventListener('click', () => {
            const wrapper = document.getElementById('video-wrapper');
            if (wrapper.requestFullscreen) {
                wrapper.requestFullscreen();
            } else if (wrapper.webkitRequestFullscreen) {
                wrapper.webkitRequestFullscreen();
            } else if (wrapper.msRequestFullscreen) {
                wrapper.msRequestFullscreen();
            }
        });

        // Refresh functionality
        document.getElementById('refresh-btn').addEventListener('click', () => {
            // If you have an actual image stream, refresh it
            const stream = document.getElementById('camera-stream');
            if (stream) {
                stream.src = stream.src.split('?')[0] + '?t=' + new Date().getTime();
            } else {
                location.reload();
            }
        });
    </script>
</body>
</html>
