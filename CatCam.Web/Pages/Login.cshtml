@page
@model CatCam.Web.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CatCam</title>
    <script type="module" src="https://cdn.jsdelivr.net/npm/@@fluentui/web-components/dist/web-components.min.js"></script>
    <style>
        :root {
            --background-color: #f5f5f5;
            --card-background: #ffffff;
        }

        body {
            margin: 0;
            padding: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .login-container {
            background: var(--card-background);
            border-radius: 12px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
            padding: 40px;
            width: 100%;
            max-width: 400px;
            margin: 20px;
        }

        .logo-container {
            text-align: center;
            margin-bottom: 30px;
        }

        .logo-icon {
            font-size: 64px;
            margin-bottom: 10px;
        }

        h1 {
            text-align: center;
            color: #333;
            margin: 0 0 10px 0;
            font-size: 28px;
            font-weight: 600;
        }

        .subtitle {
            text-align: center;
            color: #666;
            margin-bottom: 30px;
            font-size: 14px;
        }

        .form-field {
            margin-bottom: 24px;
        }

        fluent-text-field {
            width: 100%;
        }

        fluent-button {
            width: 100%;
            margin-top: 10px;
        }

        .error-message {
            color: #d13438;
            font-size: 14px;
            margin-top: 10px;
            text-align: center;
        }

        .info-text {
            color: #666;
            font-size: 12px;
            margin-top: 20px;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="logo-container">
            <fluent-icon class="logo-icon" icon="video-camera" size="64"></fluent-icon>
            <h1>CatCam</h1>
            <p class="subtitle">Watch your cats via Raspberry Pi</p>
        </div>

        <form method="post">
            <div class="form-field">
                <fluent-text-field 
                    appearance="filled" 
                    type="password" 
                    name="Password" 
                    placeholder="Enter password"
                    required
                    autofocus>
                    <span slot="start">
                        <fluent-icon icon="lock-closed"></fluent-icon>
                    </span>
                    Password
                </fluent-text-field>
            </div>

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="error-message">
                    @Model.ErrorMessage
                </div>
            }

            <fluent-button type="submit" appearance="accent">
                <fluent-icon slot="start" icon="sign-in"></fluent-icon>
                Sign In
            </fluent-button>
        </form>

        <p class="info-text">
            <fluent-icon icon="info"></fluent-icon>
            Enter the configured password to access the webcam stream
        </p>
    </div>
</body>
</html>
