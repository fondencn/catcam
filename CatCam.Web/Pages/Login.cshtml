@page
@model CatCam.Web.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}
@section Head { }

@* Scripts are loaded globally via _Layout *@

<div class="login-page">
    <div class="login-container">
        <div class="logo-container">
            <fluent-icon class="logo-icon" icon="video-camera" size="64"></fluent-icon>
            <h1>CatCam</h1>
            <p class="subtitle">Watch your cats via Raspberry Pi</p>
        </div>

        <form method="post">
            <div class="form-field">
                <fluent-text-field 
                    appearance="filled" 
                    type="password" 
                    name="Password" 
                    placeholder="Enter password"
                    required
                    autofocus>
                    <span slot="start">
                        <fluent-icon icon="lock-closed"></fluent-icon>
                    </span>
                    Password
                </fluent-text-field>
            </div>

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="error-message">
                    @Model.ErrorMessage
                </div>
            }

            <fluent-button type="submit" appearance="accent">
                <fluent-icon slot="start" icon="sign-in"></fluent-icon>
                Sign In
            </fluent-button>
        </form>

        <p class="info-text">
            <fluent-icon icon="info"></fluent-icon>
            Enter the configured password to access the webcam stream
        </p>
    </div>
</div>
